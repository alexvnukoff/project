&.company
  margin 10px 0
  padding 10px 10px 5px 10px
  .dropdown-toggle
    width 10px
    border 18px solid transparent
    border-top 18px solid #4a4a4a
    border-right 18px solid #4a4a4a
    position absolute
    right -10px
    top -10px
    .afisha
      position absolute
      color #fff
      top -14px
      right -14px
      font-size 13px
      cursor pointer
      z-index 999
    .afisha-dropdown
      position absolute
      right -11px
      top -14px
      background-color #323232
      padding 0
      li
        height 30px
        a
          color #fff
          left 0
          &:hover
            background-color #777
          i
            width 20px
            height 20px
            margin-right 10px
  .body
    margin-top 10px
    color #595959
    .logo
      padding-right 0
    .details
      width 300px
    @import './contacts'
