body
  font-family Arial, Helvetica, sans-serif
  font-size 12px
  .wrapper
    padding 0
  .header-row
    background-image linear-gradient(180deg, #efefef, #fbfbfb)
    .header-container
      width 1100px
      .header
        min-width 990px
        margin-left 0
        padding-top 2px
        .logo
          img
            width 108px
            height 23px
        .nav
          color #acacac
          font-size 12px
          line-height 23px
          margin-top 4px
          &.pull-right
            margin-right 30px
          .tab
            padding 0 5px
        .fa-map-marker
          position relative
          font-size 18px
          top 3px
          margin-right 10px
        .flag-current
          position relative
          height 18px
          margin-right 10px
        .avatar
          position relative
          height 18px
          margin-right 5px
        .person-name
          position relative
          height 18px
          margin-right 8px
          color black
        .logout
          position relative
          height 18px
          margin-left 10px
  .main
    margin-top 20px
  .main-row
    .main-container
      margin-top 20px
      width 1190px
      .main-content
        min-width 990px
        margin-left 0
        padding-top 2px

    .article-filter
      background-color #4a4a4a
      height 45px
      border-radius 4px
      .filter-ico
        float left
        width 32px
        height 32px
        margin -7px 10px 0 -7px
        display inline
        background url(../../static-assets/b24online/img/news.png)
        background-position 0px -24px
        cursor pointer
      .filter-langs
        margin-top 13px
        .filter-lang
          color #fff
          background-color #333
          padding 4px 6px
          border-radius 4px
          font-size 12px
          cursor default
          a
            color #888
            cursor pointer
      .filter-search
        top -25px
        width 220px
        right -5px
        input
          height 28px
    .left-aside
      font-size 12px
      padding 0 50px 0 40px
      widows 400px
      a
        background-color #f6f6f6
        color #0089bc
        height 31px
        padding 7px 10px
        font-size 12px
        &.active
          color #fff
          background-color #d7d7d7
          border none
        &.red
          background-color #ff0000
        &:hover
          color #fff
          background-color #4a4a4a
        i
          width 15px
          margin-right 5px
    .right-aside
      background-color #eee
    .article-content
      background-color #eee
      margin-top 15px
