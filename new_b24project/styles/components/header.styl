.header-row
  background-image linear-gradient(180deg, #efefef, #fbfbfb)
  .header-container
    height 37px
    // width auto
    @media (min-width: 768px)
      .header-container
        // width: 800px
    .header
      // min-width 990px
      margin-left 0
      padding-top 2px
      .header-menu
        position relative
        left 10px
        top 10px
        .fa-sort-desc
          position relative
          bottom 3px
          font-size 16px
          color #888
          cursor pointer
          &:hover
            color #000
          .dropdown-menu
            left 0
      .logo
        position relative
        cursor pointer
        top 5px
        img
          width 108px
          height 23px
      .nav
        color #acacac
        font-size 12px
        line-height 23px
        margin-top 4px
        &.pull-left
          a
            color #acacac
            &:hover
              color #0089bc
              text-decoration none
        &.pull-right
          margin-right 30px
        .tab
          padding 0 5px
      .fa-map-marker
        position relative
        font-size 18px
        top 3px
        margin-right 10px
        text-decoration none
      .flag-current
        position relative
        height 17px
        margin-right 10px
        cursor pointer
      .lang-dropdown
        position: absolute;
        top: 100%;
        left: -70px;
        z-index: 1000;
        float: left;
        min-width: 166px;
        padding: 5px 10px 6px
        margin: 2px 0 0;
        list-style: none;
        font-size: 14px;
        background-color: #ffffff;
        border: 1px solid #cccccc;
        border: 1px solid rgba(0, 0, 0, 0.15);
        border-radius: 4px;
        -webkit-box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175)
        background-clip: padding-box;
        img
          margin: 6px 4px 3px 2px;
          box-shadow: 1px 2px 2px 0px rgba(0,0,0,0.6)
          width: 27px
      .avatar
        position relative
        height 18px
        max-width 25px
        max-height 18px
        margin-right 5px
        cursor pointer
      .person-name
        position relative
        height 18px
        top 4px
        margin-right 8px
        color black
        cursor pointer
        &:hover
          text-decoration underline
      .logout
        position relative
        height 18px
        margin-left 10px
        top 4px
