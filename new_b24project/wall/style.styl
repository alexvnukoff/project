body
  @import url('https://fonts.googleapis.com/css?family=Amatic+SC')
  font-family Arial, Helvetica, sans-serif
  font-size 12px
  .wrapper
    padding 0
  .header-row
    background-image linear-gradient(180deg, #efefef, #fbfbfb)
    .header-container
      width 1100px
      .header
        min-width 990px
        margin-left 0
        padding-top 2px
        .logo
          img
            width 108px
            height 23px
        .nav
          color #acacac
          font-size 12px
          line-height 23px
          margin-top 4px
          &.pull-right
            margin-right 30px
          .tab
            padding 0 5px
        .fa-map-marker
          position relative
          font-size 18px
          top 3px
          margin-right 10px
        .flag-current
          position relative
          height 18px
          margin-right 10px
        .avatar
          position relative
          height 18px
          margin-right 5px
        .person-name
          position relative
          height 18px
          margin-right 8px
          color black
        .logout
          position relative
          height 18px
          margin-left 10px
  .main
    margin-top 20px
  .main-row
    .main-container
      margin-top 20px
      width 1190px
      .main-content
        min-width 990px
        margin-left 0
        padding-top 2px
    .article-filter
      background-color #4a4a4a
      height 45px
      width 640px
      border-radius 4px
      margin-left -30px
      margin-right -30px
      .filter-ico
        position relative
        float left
        display inline
        top -3px
        font-size 22px
        color #eee
        margin-right 10px
        padding 3px 5px
        line-height 16px
        cursor pointer
        border solid 1px #333
        border-radius 3px
        background-color #414141
        padding 5px 6px
      .sprite
        margin -4px 10px 0 -7px
        width 32px
        height 32px
        background url(../../static-assets/b24online/img/news.png)
        background-position 0px -24px
      .filter-langs
        margin-top 13px
        .filter-lang
          color #fff
          background-color #333
          padding 4px 6px
          border-radius 4px
          font-size 12px
          cursor default
          a
            color #888
            cursor pointer
      .filter-search
        top -25px
        width 160px
        right -5px
        input
          height 28px
    .left-aside
      font-size 12px
      padding 0 50px 0 40px
      widows 400px
      a
        background-color #f6f6f6
        color #0089bc
        height 31px
        padding 7px 10px
        font-size 12px
        &:hover
          background-color #e6e6e6
        &.active
          color #fff
          background-color #d7d7d7
          border none
        &.red
          background-color #ff0000
        i
          width 15px
          margin-right 5px
    .article-content
      margin-top 15px
      margin-left -40px
      width 660px
      .article-header
        font-size 20px
        font-weight 600
        font-family 'Amatic'
      .block-title
        margin 10px 0 20px 0
        font-size 16px
        padding 5px 15px
        color #000
        font-weight bold
        height 30px
        background-color #e6e6e6
      .content-goods
        .thumbnail
          border none
          padding 0
          margin 0 -2px 0 0
          line-height 1.3
          .thumb-img
            box-shadow 3px 5px 12px 0px;
          .caption
            padding 15px 0 0 0
            color #333
            font-size 11px
            .thumb-flag
              height 16px
          .buy
            width 100%
            height 22px
            line-height 10px
            font-size 12px
            border none
            background url(../../static-assets/b24online/img/btnbuy.gif) repeat-x
      .content-block
        font-size 12px
        color #9b9b9b
        .thumb-flag-block
          height 16px
        .date
          margin-left 35px
        .title
          font-size 16px
          font-weight 800
          margin 6px 0 6px 0
        .title-news
          font-size 16px
          font-weight 800
          margin 0 0 6px 0
        .project-site
          margin 0 0 6px 20px
        .branch
          margin-right 20px
          span
            color #000
        .img-container
          img
            max-width 220px
            max-height 150px
        .author
          color #9b9b9b
        .news-short
          color #595959
        .news-detail
          color #595959
          margin-top 10px
    .right-aside
      .right-aside-block
        height 45px
        border-radius 4px
        background-color #4a4a4a
        padding 12px
        .num
          color #fff
        .icon-nt1
          width 14px
          height 14px
          background-position -160px -190px
        .icon-nt2
          width 15px
          height 11px
          background-position -175px -190px
        .icon-nt3
          width 18px
          height 13px
          background-position -191px -190px
          &.disable
            opacity .4
        .basket
          width 23px
          height 23px
          padding 2px
          background-image url(../../static/b24online/img/basket.png)
          background-repeat no-repeat
          text-align center
          font-weight bold
          color #fff
          position relative
          background-size 100% 100%
          top 2px
          font-size 14px
          font-style normal
          span
            position relative
            top -3px
        .icon-notyfi
          display inline-block
          margin 0 2px 0 9px
          vertical-align middle
        .imgnews
          background-image url(../../static-assets/b24online/img/news.png)
        &.sell
          margin-top 15px
        &.title
          margin-top 15px
          height 35px
          padding 8px
          border-radius 3px 3px 0 0
          color #fff
          span
            font-size 16px
        &.list
          background-color #f5f5f5
          height 35px
          padding 8px
          border-radius 0 0 3px 3px
          border solid 1px #484848
          span
            font-size 12px
            font-weight 500
  .footer
    font-size 12px
    .separator
      margin-top 80px
    .bottom
      font-size 11px
