.tab-content
  margin-top 25px
  table
    img
      float left
  #staff-tabs
    .table-staff
      td
        line-height 30px
      .contact-us
        color #0089bc
        .fa
          font-size 18px
          cursor pointer
          position relative
          left 15px
  .content-staff
    .department-structure
      height 30px
      padding-left 30px
      line-height 30px
      &:hover
        background-color #eee
        .fa
          display block
      &.active
        background-color #eee
      .fa
        display none
        color #888
        margin 0 5px
        line-height 30px
        font-size 14px
        &:hover
          color #000
          cursor pointer
          font-size 15px
    .sub-vacancy
      display none
      // margin-top 5px
      margin-left 40px
      padding-left 10px
      line-height 30px
      cursor pointer
      &:hover
        background-color #eee + 10
        .fa
          display block
          &:hover
            color #000
            font-size 15px
      .fa
        display none
        font-size 14px
        color #888
        margin 0 5px
        line-height 30px
  #map
    width 100%
    height 400px
  .upload
    position: relative;
    float: left;
    clear: left;
    margin 10px 20px;
    height 35px
    // cursor pointer
    &:hover
      .upload-btn
        background-color #38a8dc
        .text
          color #fff
        i
          color #fff
    form
      // cursor pointer
      #image-upload
        position absolute
        opacity 0
        height 35px
        width 100px
        margin-left 0
        z-index 999
        // cursor pointer
    .upload-btn
      background-color: #fafafa;
      width: 100px;
      height: 35px;
      padding: 5px;
      border: solid 1px #888;
      border-radius: 3px;
      i
        font-size: 25px;
        position: relative;
        float: left;
      .text
        line-height: 25px;
        position: relative;
        float: left;
        margin-left: 10px;
  .document
    background-color #fdfdfd
    padding 10px
    .name
      text-align center
    .download
      position relative
      float left
      clear both
      &:hover
        a
          display block
          transition .5s all
        .trash
          opacity 1
          transition .5s all
      .download
        position absolute
        display none
        top 65px
        left 0px
        background-color #777
        width 100%
        text-align center
        color #fff
        cursor pointer
      .trash
        opacity 0
        color #fff
        background-color #888
        height 25px
        width 25px
        // left 35px
        text-align center
        line-height 25px
        font-size 16px
        position absolute
        top 0px
        z-index 999
        &:hover
          color red
  p
    color #777
    font-weight 800
  .text
    color #777
    p
      font-weight 300
  .fancy-container
    float left
    clear left
    margin-top 10px
    margin-left -30px
    .gallery-item
      min-height 130px
      &:hover
        .fa-trash-o
          opacity 1
          transition .5s all
      .fa-trash-o
        opacity 0
        color #fff
        background-color #888
        height 25px
        width 25px
        left 35px
        text-align center
        line-height 25px
        font-size 16px
        position absolute
        top 0px
        z-index 999
        &:hover
          color red
      img
        display block
        position relative
        float left
        margin-left 20px
        margin-right auto
        max-width 100px
        max-height 100px
        margin-bottom 15px
  img
    display block
    margin-left auto
    margin-right auto
    max-width 100%
    max-height 100%
    margin-bottom 15px
  .text
    margin-bottom 20px
  .field
    margin-top 5px
  .value
    margin-top 5px
    color #777
