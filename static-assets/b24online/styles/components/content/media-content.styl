.media-content
  margin-top 15px
  padding 15px
  background-color #fafafa
  .thumb-container
    position relative
    margin-bottom 10px
    .thumb-img
      position: relative;
      max-width 100%
      max-height 185px
      min-width 100%
      min-height 50px
    &:before
      z-index: 0;
      position: absolute;
      content: "";
      bottom: 5px;
      left: 4px;
      width: 90%;
      top: 78%;
      max-width: 300px;
      box-shadow: 0px 5px 7px 0px #616161;
      transform: rotate(-3deg);
  &.event
    margin-top -10px
    background-color #fff
