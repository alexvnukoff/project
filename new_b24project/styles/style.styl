body
  @import url('https://fonts.googleapis.com/css?family=Amatic+SC')
  font-family Arial, Helvetica, sans-serif
  font-size 12px
  a
    color #0089bc
  .wrapper
    padding 0

  // HEADER
  .header-row
    background-image linear-gradient(180deg, #efefef, #fbfbfb)
    .header-container
      width 1100px
      .header
        min-width 990px
        margin-left 0
        padding-top 2px
        .logo
          cursor pointer
          img
            width 108px
            height 23px
        .nav
          color #acacac
          font-size 12px
          line-height 23px
          margin-top 4px
          &.pull-left
            a
              color #acacac
              &:hover
                color #0089bc
                text-decoration none
          &.pull-right
            margin-right 30px
          .tab
            padding 0 5px
        .fa-map-marker
          position relative
          font-size 18px
          top 3px
          margin-right 10px
          text-decoration none
        .flag-current
          position relative
          height 17px
          margin-right 10px
          cursor pointer
        .lang-dropdown
          position: absolute;
          top: 100%;
          left: -70px;
          z-index: 1000;
          float: left;
          min-width: 166px;
          padding: 5px 10px 6px
          margin: 2px 0 0;
          list-style: none;
          font-size: 14px;
          background-color: #ffffff;
          border: 1px solid #cccccc;
          border: 1px solid rgba(0, 0, 0, 0.15);
          border-radius: 4px;
          -webkit-box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
          box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175)
          background-clip: padding-box;
          img
            margin: 6px 4px 3px 2px;
            box-shadow: 1px 2px 2px 0px rgba(0,0,0,0.6)
            width: 27px
        .avatar
          position relative
          height 18px
          margin-right 5px
          cursor pointer
        .person-name
          position relative
          height 18px
          top 4px
          margin-right 8px
          color black
          cursor pointer
          &:hover
            text-decoration underline
        .logout
          position relative
          height 18px
          margin-left 10px
          top 4px

// MAIN
  .main
    margin-top 20px
  .main-row
    // MAIN-filter
    .main-container
      margin-top 20px
      width 1190px
      .main-content
        min-width 990px
        margin-left 0
        padding-top 2px
    .article-filter
      background-color #4a4a4a
      height 45px
      width 640px
      border-radius 4px
      margin-left -30px
      margin-right -30px
      .filter-ico
        position relative
        float left
        display inline
        top -3px
        font-size 22px
        color #eee
        margin-right 10px
        padding 3px 5px
        line-height 16px
        cursor pointer
        border solid 1px #333
        border-radius 3px
        background-color #414141
        padding 5px 6px
      .sprite
        margin -4px 10px 0 -7px
        width 32px
        height 32px
        background url(../images/news.png)
        background-position 0px -24px
      .filter-langs
        margin-top 13px
        .filter-lang
          position relative
          float left
          top -3px
          margin-left 5px
          color #fff
          background-color #333
          padding 4px 6px
          border-radius 4px
          font-size 12px
          cursor default
          a
            color #888
            cursor pointer
      .filter-search
        top -5px
        width 160px
        right -5px
        input
          height 28px

    // MAIN-left aside
    .left-aside
      font-size 12px
      padding 0 50px 0 40px
      widows 400px
      .left-select-container
        width 100%
        padding 10px
        background-color #f5f5f5
        border 1px solid
        border-color #CCC #FFF #FFF #CCC
        box-sizing border-box
        box-shadow inset 0 0 3px #CCC
        select
          width 100%
      a
        background-color #f6f6f6
        color #0089bc
        height 31px
        padding 7px 10px
        font-size 12px
        &:hover
          background-color #e6e6e6
        &.active
          color #fff
          background-color #d7d7d7
          border none
        &.red
          background-color #ff0000
        i
          width 15px
          margin-right 5px
    // MAIN-center
    .article-content
      margin-top 15px
      margin-left -40px
      width 660px
      // Coupons'
      .paginator
        color #777
        a
          margin-left 10px
      .banner
        height 220px
        width 100%
        background #e9f7fc
        padding 10px
        margin-top 10px
        .banner-container
          height 100%
          width 100%
          .body
            width 100%
            height 150px
            .content
              background #fff
              position relative
              float left
              height 150px
              .img
                img
                  position relative
                  float left
                  margin-top 14px
                  max-height 100%
                  max-width 100%
                .badge
                  position absolute
                  top 14px
                  height 28px
                  font-size 16px
                  width 57px
                  line-height 21px
                  background-color #dd201c
                  border-radius 0
                  &:after
                    content " "
                    border-width 3px 3px 4px 4px
                    border-style solid
                    border-color transparent #dd201c #dd201c transparent
                    position absolute
                    top 0
                    right 100%
              .text
                margin-top 10px
                .title
                  position relative
                  float left
                  font-size 20px
                .status
                  position relative
                  float left
                  clear left
                  margin-top 5px
                  color #a5a5a5
                .expire
                  position relative
                  float left
                  clear left
                  margin-top 5px
                  font-size 26px
                  .clock
                    margin-top 20px
                    color #5a5a5a
                    margin-left 10px
                  .exp
                    margin-left 30px
                    &:first-child
                      margin-left 10px
                  .count
                    font-size 30px
                    text-align center
                    color #5a5a5a
                  .date
                    margin-top 10px
                    font-size 12px
                    color #cacaca
          .footer
            width 100%
            height 50px
            background #159fcb
            .buy
              margin-top 7px
              padding 6px 20px
              color #fff
              background-color #dd201c
              border solid 1px #f00
              font-size 15px
              font-weight 700
            .current-price
              margin-right 15px
              line-height 50px
              font-weight 700
              color #c8f2ff
              .price
                font-size 18px
                font-weight 700
                margin-left 5px
                color #fff
            .old-price
              margin-right 15px
              line-height 50px
              color #fff
              font-size 14px
              .price
                text-decoration line-through
                color #fff
                margin-right 5px
      .article-header
        font-size 20px
        font-weight 600
        font-family 'Amatic'
      .block-title
        margin 10px 0 20px 0
        font-size 16px
        padding 5px 15px
        color #000
        font-weight bold
        height 30px
        background-color #e6e6e6
      .content-goods
        margin-left -5px
        margin-right 0
        .b2b-elem
          margin-top 30px
        .thumbnail
          border none
          padding: 8px 8px 1px;
          margin: -10px -15px 0px -10px;
          line-height 1.3
          background-color #fafafa
          &.coupons
            height 340px
            margin-top 20px
            .badge
              position absolute
              top 0
              right 0
              height 25px
              font-size 12px
              width 40px
              line-height 18px
              background-color #dd201c
              border-radius 0
              &:after
                content " "
                border-width 3px 3px 4px 4px
                border-style solid
                border-color transparent #dd201c #dd201c transparent
                position absolute
                top 0
                right 100%
            .thumbnail-container
              position relative
              .shadow-effect
                position relative
              .thumb-img
                position: relative;
                max-width 100%
                max-height 185px
                min-width 100%
                min-height 50px
              &:before
                z-index: 0;
                position: absolute;
                content: "";
                bottom: 5px;
                left: 4px;
                width: 90%;
                top: 78%;
                max-width: 300px;
                box-shadow: 0px 5px 7px 0px #616161;
                transform: rotate(-3deg);
            .caption
              padding 15px 0 0 0
              color #333
              position absolute
              bottom 0
              font-size 12px
              font-weight 100
              color #4a4a4a
              .media
                margin-bottom 0
                // height 80px
              .thumb-flag
                height 16px
              .price
                color red
                font-weight 700
                font-size 13px
                margin-top 10px
            .coupon-buy
              width 100%
              height 22px
              line-height 10px
              font-size 12px
              border none
              background url(../images/coupon_btnbuy.gif) repeat-x
            .buy
              width 100%
              height 22px
              line-height 10px
              font-size 12px
              border none
              background url(../images/btnbuy.gif) repeat-x
          &.wall
            margin-top 0
      .content-block
        font-size 12px
        color #9b9b9b
        .content
          background-color #fafafa
          padding 13px 10px 10px
          margin-top 10px
          width 100%
          &.company
            margin 10px 0
            padding 10px 10px 5px 10px
            .dropdown-toggle
              width 10px
              border 18px solid transparent
              border-top 18px solid #4a4a4a
              border-right 18px solid #4a4a4a
              position absolute
              right -10px
              top -10px
              .afisha
                position absolute
                color #fff
                top -14px
                right -14px
                font-size 13px
                cursor pointer
                z-index 999
              .afisha-dropdown
                position absolute
                right -11px
                top -14px
                background-color #323232
                padding 0
                li
                  height 30px
                  a
                    color #fff
                    left 0
                    &:hover
                      background-color #777
                    i
                      width 20px
                      height 20px
                      margin-right 10px
            .body
              margin-top 10px
              color #595959
              .logo
                padding-right 0
              .details
                width 300px
              .contacts
                border-left solid 1px #e1e1e1
                width 164px
                .address
                  float left
                  clear left
                .phone
                  float left
                  clear left
                  margin-top 6px
                .extra-phone
                  float left
                  clear left
                  margin-top 6px
                .mail
                  float left
                  clear left
                  margin-top 6px
                .sprite
                  background url(../images/news.png)
                  margin-right 6px
                .address-ico
                  background-position -120px -90px
                  width 16px
                  height 16px
                .phone-ico
                  background-position -137px -90px
                  width 16px
                  height 16px
                .extra-phone-ico
                  background-position -153px -90px
                  width 16px
                  height 16px
                .mail-ico
                  background-position -187px -90px
                  width 16px
                  height 16px

                // .phone-ico
                // .extra-phone-ico
          &.vacancy
            background-color #fff
            padding-left 0
            margin-top -30px
            .title
              margin-left 15px
            .social
              position relative
              float left
              clear left
              margin 10px 0 20px
              padding-left 15px
              i
                display: inline-block;
                width: 24px;
                height: 26px;
                margin-right: 6px;
                background: url(../images/news.png);
                &.fb
                  background-position: 0px -60px;
                &.vk
                  background-position: -30px -60px;
                &.ok
                  background-position: -60px -60px
                &.tw
                  background-position: -90px -60px
            .vacancy-content
              border solid 1px #eee
              border-radius 5px
              padding-bottom 20px
            .fields
              div
                margin-top 5px
            .values
              div
                margin-top 5px
            .nav-tabs
              margin-top 10px
            .buy
              position absolute
              margin-top 5px
              right 15px
              width 100%
              line-height 27px
              font-size 17px
              border none
              background-image -webkit-gradient( linear, left top, left bottom, color-stop(0, rgb(60,155,203)), color-stop(0.49, rgb(60,159,195)), color-stop(0.5, rgb(33,134,184)), color-stop(1, rgb(33,136,187)) )
            .tab-content
              margin-top 25px
              img
                display block
                margin-left auto
                margin-right auto
                max-width 100%
                max-height 100%

        .thumb-flag-block
          height 13px
          margin-right 7px
        .date
          position relative
          top -1px
          margin-left -5px
          font-size 13px
          font-weight 300
          // margin 6px 0 6px 0
        .title
          font-size 16px
          font-weight 800
          color #000
          margin 6px 0 6px 0
        .title-news
          line-height 14px
          font-size 16px
          font-weight 800
          margin 0 0 6px 0
        .title-company
          width 90%
          margin-top -4px
          font-size 16px
          font-weight 800
        .project-site
          margin 0 0 6px 20px
        .branch
          position relative
          clear left
          margin-right 20px
          span
            color #000
        .author
          color #9b9b9b
          span
            color #777
        .costs
          margin-left 20px
          margin-bottom 10px
          span
            color #777
            font-weight 800
            font-size 14px
        .news-company
          position relative
          top 0
          color #595959
        .news-detail
          color #595959
          margin-top 10px
        .img-container
          position relative
          max-width 90px
          margin-bottom 10px
          img
            position: relative;
            max-width 100%
            max-height 130px
            min-width 50px
            min-height 50px
          &:before
            z-index: 0;
            position: absolute;
            content: "";
            bottom: 5px;
            left: 4px;
            width: 90%;
            top: 78%;
            max-width: 300px;
            box-shadow: 0px 5px 7px 0px #616161;
            transform: rotate(-3deg);

    //MAIN-right aside
    .right-aside
      .right-aside-block
        height 45px
        border-radius 4px
        background-color #4a4a4a
        padding 12px 5px 12px 5px
        color #fff
        a
          font-size 15px
          margin-left 5px
          color #fff
          cursor pointer
          .badge
            margin-left 3px
            font-size 10px
        i.disabled
          color #929292
          cursor default
        .num
          color #fff
        .icon-nt1
          width 14px
          height 14px
          background-position -160px -190px
        .icon-nt2
          width 15px
          height 11px
          background-position -175px -190px
        .icon-nt3
          width 18px
          height 13px
          background-position -191px -190px
          &.disable
            opacity .4
        .basket
          width 23px
          height 23px
          padding 2px
          background-image url(../../static/b24online/img/basket.png)
          background-repeat no-repeat
          text-align center
          font-weight bold
          color #fff
          position relative
          background-size 100% 100%
          top 2px
          font-size 14px
          font-style normal
          span
            position relative
            top -3px
        .icon-notyfi
          display inline-block
          margin 0 2px 0 9px
          vertical-align middle
        .imgnews
          background-image url(images/news.png)
        &.sell
          margin-top 15px
        &.title
          margin-top 15px
          height 35px
          padding 8px
          border-radius 0
          color #fff
          span
            font-size 16px
        &.companies-title
          background-color #f5f5f5
          height 35px
          padding 8px
          border-radius 3px 3px 0 0
          border solid 1px #e6e6e6
          span
            font-size 13px
            font-weight 700
            color #4a4a4a
        &.list
          .company-paid-card
            margin -13px -5px
            border-radius 0 0 3px 3px
            .flag
              margin-left 0
              .thumb-flag
                width 18px
            .paid-img
              margin-right 5px
              max-height 45px
            .text-details
              font-size 11px
            .thumb-title
              position relative
              font-size 12px
              margin-left 10px
              color #0089bc
              font-weight 700

// FOOTER
  #footer
    font-size 12px
    .footer-separator
      margin-top 80px
    .bottom
      font-size 11px
    .footer-links
      h5
        margin-bottom 15px
      a
        position relative
        float left
        clear left
// MODAL (filter)
.modal
  .tab-content
    margin-top 20px
    .multipleSelect
      width 570px
