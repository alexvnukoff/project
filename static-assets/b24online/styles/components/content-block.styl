.content-block
  font-size 12px
  color #9b9b9b
  @import './content/contacts'
  .not-found
    text-align center
    color #777
    font-size 26px
  .loader
    display none
    text-align center
  .content
    background-color #fafafa
    padding 13px 10px 10px
    margin-top 10px
    width 100%
    &.product
      padding 0
      margin-top 0 !important
      background-color #fff
      padding-bottom 10px
    .modal
      color #000
    &.clear-bgc
      background-color #fff
    @import './content/company'
    @import './content/vacancy'
    @import './content/social'
    @import './content/afisha'
    &.details
      margin-top -30px
      .title
        padding 0 15px
        .fa-youtube-play
          margin-right 8px
          color #c10010
        &.left
          position relative
          float left
          clear left
          width 60%
        &.product
          margin-top 20px
          font-weight 300
          padding 0
      .price-value
        color #000
        font-weight 800
      .main-img
        img
          display block
          max-width 100%
          max-height 200px
          margin-left auto
          margin-right auto
          margin-bottom 15px
      @import './content/contact-us-btn'
      .thumb-flag-block
        margin-left 15px
      .date
        margin-left 0
      .link
        margin-left 15px
        margin-bottom 10px
        img
          margin-right 5px
          max-width 30px
          min-height 30px
      .video-content
        margin-top 15px
      @import './content/customer-fieldset'
      @import './content/media-content'
      @import './content/contacts'
      .tabs
        padding 0 20px
        margin-top 20px
        border solid 1px #eee
        border-radius 5px
        padding-bottom 20px
        .nav-tabs
          margin-top 10px
      .fields
        div
          margin-top 5px
      .values
        div
          color #777
          font-weight 800
          margin-top 5px
      iframe
        width 100%
      .buy
        position absolute
        margin-top 5px
        right 15px
        width 100%
        line-height 27px
        font-size 17px
        border none
        background-image -webkit-gradient( linear, left top, left bottom, color-stop(0, rgb(60,155,203)), color-stop(0.49, rgb(60,159,195)), color-stop(0.5, rgb(33,134,184)), color-stop(1, rgb(33,136,187)) )
      .basket
        background-image -webkit-gradient( linear, left top, left bottom, color-stop(0, rgb(60,155,203)), color-stop(0.49, rgb(60,159,195)), color-stop(0.5, rgb(33,134,184)), color-stop(1, rgb(33,136,187)) )
        color #fff
      @import './content/tab-content'
      @import './content/news-similar'
  .thumb-flag-block
    height 13px
    margin-right 7px
  .date
    position relative
    top -1px
    // margin-left -5px
    font-size 13px
    font-weight 300
    // margin 6px 0 6px 0
  .title
    font-size 16px
    font-weight 800
    color #000
    margin 6px 0 6px 0
  .title-news
    line-height 14px
    font-size 16px
    font-weight 800
    margin 0 0 6px 0
  .title-company
    width 90%
    margin-top 0
    font-size 16px
    font-weight 800
  .project-site
    margin 0 0 6px 20px
  .branch
    position relative
    clear left
    margin-right 20px
    span
      color #000
  .author
    color #9b9b9b
    span
      color #777
  .costs
    margin-left 20px
    margin-bottom 10px
    span
      color #777
      font-weight 800
      font-size 14px
  .news-company
    position relative
    top 0
    color #595959
  .news-detail
    color #595959
    margin-top 10px
  .img-container
    position relative
    max-width 90px
    margin-bottom 10px
    img
      position: relative;
      max-width 100%
      max-height 130px
      min-width 50px
      min-height 50px
    &:before
      z-index: 0;
      position: absolute;
      content: "";
      bottom: 5px;
      left: 4px;
      width: 90%;
      top: 78%;
      max-width: 300px;
      box-shadow: 0px 5px 7px 0px #616161;
      transform: rotate(-3deg);
