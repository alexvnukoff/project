.news-similar
  position relative
  float left
  clear left
  margin-top 20px
  background-color #fafafa
  .title
    font-size 20px
    font-weight 300
    font-family: 'Roboto', sans-serif;
    color #777
  .caption
    clear left
    .date
      color #9b9b9b
  .news
    border none
    background-color #fafafa
    padding-top 10px
    padding-bottom 15px
    margin-top 15px
    .thumbnail-container
      .thumb-container
        position relative
        margin-bottom 10px
        left 35px
        .thumb-img
          position: relative;
          max-width 100px
          max-height 100px
          min-width 50px
          min-height 50px
        &:before
          z-index: 0;
          position: absolute;
          content: "";
          bottom: 5px;
          left: 4px;
          width: 90%;
          top: 78%;
          max-width: 300px;
          box-shadow: 0px 5px 7px 0px #616161;
          transform: rotate(-3deg);
